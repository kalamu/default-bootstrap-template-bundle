{% trans_default_domain 'kalamu' %}
{% if posts|length %}
    <h4 class="mb-3 text-muted">
        <span class="text-muted">{{ 'Last posts'|trans }}</span>
    </h4>
    <ul class="list-group mb-3">
        {% for post in posts %}
        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
                <h6 class="my-0"><a href="{{ cms_link('read', post) }}">{{ post }}</a></h6>
                <small class="text-muted">{{ post.publishedAt|format_date }}</small>
            </div>
        </li>
        {% endfor %}
    </ul>
{% endif %}